# Clio Whisper Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# WhisperLive Server Configuration
# =============================================================================
WHISPERLIVE_HOST=localhost
WHISPERLIVE_PORT=9090
WHISPERLIVE_WS_URL=ws://localhost:9090

# =============================================================================
# WhisperLive Client Configuration
# =============================================================================
WHISPERLIVE_UID=c3f7a1b2-d4e5-6789-abcd-ef0123456789
WHISPERLIVE_LANGUAGE=en
WHISPERLIVE_TASK=transcribe
WHISPERLIVE_MODEL=base
WHISPERLIVE_USE_VAD=true
WHISPERLIVE_SEND_LAST_N_SEGMENTS=10

# =============================================================================
# Audio Capture Configuration
# =============================================================================
AUDIO_INPUT_MODE=microphone  # microphone or file
AUDIO_DEVICE_INDEX=-1  # -1 for default device, or specify index/name
AUDIO_DEVICE_NAME=
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=4096
AUDIO_INPUT_FILE=  # Path to WAV file for file input mode

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Transcript Aggregation Configuration
# =============================================================================
MAX_UNCONSOLIDATED_SEGMENTS=1000
MAX_CONSOLIDATED_LENGTH=100000
MAX_QUESTIONS=500
COMMIT_DELAY_SECONDS=2.0

# =============================================================================
# English-only Enforcement
# =============================================================================
ENFORCE_ENGLISH=true
MIN_ENGLISH_CONFIDENCE=0.8

# =============================================================================
# UI Configuration
# =============================================================================
UI_ENABLED=true

# =============================================================================
# Redis Configuration (Optional - for high-performance pipeline)
# =============================================================================
# Set REDIS_ENABLED=true to use Redis Streams instead of in-memory queues
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Optional - leave empty for no password
REDIS_MAX_CONNECTIONS=10
REDIS_STREAM_PREFIX=clio
REDIS_CONSUMER_PREFIX=clio-consumer
